{%- extends 'base/base.njk' -%}
{%- import "components/topic-names.njk" as topicNames -%}
{%- import "components/testing-environment-labels.njk" as testingEnvironmentLabels -%}
{%- import "components/format-score.njk" as formatScore -%}
{%- import "components/breadcrumbs.njk" as breadcrumbs -%}
{%- set title="Results for " + topicNames.TopicName(topicId) -%}

{%- block content -%}
<main>
    {{breadcrumbs.Breadcrumbs(crumbs)}}

    <h2>{{topicNames.TopicName(topicId)}}</h2>
    <p>Available versions:</p>
    <ul>
        {%- for testBook in testBooks -%}
        {%- if testBook.isLatest -%}
        <li class="latest-test-book">
        {%- else -%}
        <li>
        {%- endif -%}
        
        {%- if testBook.testingEnvironments | length > 0 -%}
        <a href="/results/topic/{{topicId}}/{{testBook.version}}">{{testBook.version}} results</a>
        {%- else -%}
        <span>{{testBook.version}}: no results published yet.</span>
        {%- endif -%}
        </li>
        {%- endfor -%}
    </ul>
</main>


{%- endblock -%}