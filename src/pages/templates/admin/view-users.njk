{%- extends 'base/admin-base.njk' -%}
{%- set title = "Admin: Manage Users" -%}
{%- block content -%}

<script type="module" src="/js/data-table.js"></script>
<script type="module">
    import * as tableSettings from '/js/tables/admin-active-users-table-settings.js';
    import * as helpers from '/js/tables/data-table-helpers.js';
    import {style} from '/js/data-table-style.js';

    let rows = {{activeUsers | dump | safe}};

    let headers = [
        {
            title: "Name",
            id: "name",
            sort: (a, b) => helpers.stringSort(a, b, row => row.name),
            sortIs: 'asc'
        }
    ];
    
    let dataTable = document.querySelector("data-table");
    dataTable.bodyCellDisplay = tableSettings.bodyCellDisplay;
    dataTable.textSearchFilter = tableSettings.textSearchFilter;
    dataTable.css = style;
    dataTable.data = {headers, rows};  
    window.addEventListener("resize", () => {
        dataTable.render();
    }); 
</script>
<main class="center">
    <h2>Active users</h2>

    <div id="active-users">
        <data-table 
            summary="User information"
            showTextSearch="true"
            defaultSortHeader="0"
        >
        </data-table>
    </div>
    <noscript>
    Javascript is required to view table(s) on this page.
    </noscript>
</main>

{%- endblock -%}

