{%- extends 'base/admin-base.njk'-%}
{%- set title="Server Information" -%}
{%- block content -%}
<main>
    <h2 id="pagename">Server Information</h2>

    <style>
        table {
            width: 50%;
        }
        td {
            border: thin black solid;
        }
    </style>
    <table aria-labelledby="pagename" id="server-info">
        <tbody>
            {%- for item in items -%}
            <tr>
                <td>{{item.name}}</td>
                <td>{{item.value}}</td>
            </tr>
            {%- endfor -%}
        </tbody>
    </table>
</main>

{%- endblock -%}